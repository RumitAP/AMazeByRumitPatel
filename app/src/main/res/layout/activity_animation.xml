<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5662A5"
    android:backgroundTint="#6875BF"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.wm.cs.cs301.RumitPatel.gui.PlayAnimationActivity">


    <!--https://www.youtube.com/watch?v=kMVcXNy1a1c&t=759s-->
    <ProgressBar
        android:id="@+id/ProgressBar1"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="67dp"
        android:backgroundTint="#E91E63"
        android:translationY="200dp"></ProgressBar>


    <TextView
        android:id="@+id/textviewid1"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="280dp"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:translationX="-380dp"
        android:translationY="200dp"></TextView>

    <Button
        android:id="@+id/zoom_in1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="#8ADC8D"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:translationX="-280dp"
        app:layout_constraintBottom_toBottomOf="@id/zoom_in" />

    <Button
        android:id="@+id/zoom_out1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="#CC6B6B"
        android:text="-"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:translationX="-330dp"
        android:translationY="38dp"
        app:layout_constraintBottom_toTopOf="@id/zoom_out" />

    <ToggleButton
        android:id="@+id/wholeMazeToggle1"
        android:layout_width="97dp"
        android:layout_height="41dp"
        android:backgroundTint="#673AB7"
        android:baselineAligned="false"
        android:buttonTint="#673AB7"
        android:drawableStart="@drawable/selector"
        android:textOff="    Map off"
        android:textOn="    Map on"
        android:translationX="-700dp"
        android:translationY="500dp" />


    <Button
        android:id="@+id/playPauseButton"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:translationX="-545dp"
        android:translationY="500dp" />

    <SeekBar
        android:id="@+id/speedSeekBar"
        android:layout_width="267dp"
        android:layout_height="29dp"
        android:layout_above="@id/ProgressBar1"
        android:layout_centerHorizontal="true"
        android:thumb="@mipmap/ic_launcher"
        android:translationX="-850dp"
        android:translationY="400dp" />

    <TextView
        android:id="@+id/frontSensor"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:text="F"
        android:translationX="-1100dp"
        android:translationY="-10dp" />

    <TextView
        android:id="@+id/leftSensor"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:text="L"
        android:translationX="-1075dp"
        android:translationY="-10dp" />

    <TextView
        android:id="@+id/backSensor"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:text="B"
        android:translationX="-1050dp"
        android:translationY="-10dp" />

    <Button
        android:id="@+id/goToLosing"
        android:layout_width="159dp"
        android:layout_height="63dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="#8ADC8D"
        android:text="Go2Losing"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:translationX="-1170dp"
        android:translationY="200dp" />

    <TextView
        android:id="@+id/rightSensor"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:text="R"
        android:translationX="-1180dp"
        android:translationY="-10dp" />

    <Button
        android:id="@+id/goToWinning"
        android:layout_width="175dp"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="#8ADC8D"
        android:text="Go2Winning"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:translationX="-1365dp"
        android:translationY="125dp" />

</LinearLayout>
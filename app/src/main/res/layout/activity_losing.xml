<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59716F"
    android:backgroundTint="#57CABF"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/losingImage"
        android:layout_width="match_parent"
        android:layout_height="258dp" />

    <TextView
        android:id="@+id/energyConsumption"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="420dp"
        android:fontFamily="sans-serif-black"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="20sp"
        android:translationX="-396dp"
        android:translationY="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pathLegnth"
        android:layout_width="163dp"
        android:layout_height="51dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="34dp"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:translationX="-750dp"
        android:translationY="365dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pathused"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/shortestPath"
        android:layout_width="160dp"
        android:layout_height="58dp"
        android:layout_marginStart="70dp"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:translationX="-1025dp"
        android:translationY="475dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/energy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.608" />

</LinearLayout>